<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img">

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="0dp"
        android:background="#FF08ED1E" />


    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox3"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="1dp"
        android:background="#FD0000" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox2"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="1dp"
        android:background="#FDF000" />

    <SeekBar
        android:id="@+id/search_badge1"
        android:layout_width="611dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/search_badge2"
        android:layout_marginLeft="58dp"
        android:layout_marginBottom="-71dp"
        android:layout_toRightOf="@+id/checkbox1"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/xedap" />

    <SeekBar
        android:id="@+id/search_badge2"
        android:layout_width="612dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/search_badge3"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="-67dp"
        android:layout_toRightOf="@+id/checkbox2"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/xedap2" />

    <SeekBar
        android:id="@+id/search_badge3"
        android:layout_width="610dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="57dp"
        android:layout_marginBottom="-3dp"
        android:layout_toRightOf="@+id/checkbox3"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/xedap3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm Của Bạn"
            android:textColor="#FDF000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textviewDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="#ff00"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/buttonplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/play" />

</RelativeLayout>